{
  "name": "@kazupon/rolldown-cli",
  "version": "0.0.1",
  "description": "rolldown for CLI",
  "type": "module",
  "keywords": [
    "rolldown",
    "cli"
  ],
  "author": {
    "name": "kazuya kawaguchi",
    "email": "kawakazu80@gmail.com"
  },
  "funding": "https://github.com/sponsors/kazupon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazupon/rolldown-cli.git"
  },
  "bugs": {
    "url": "https://github.com/kazupon/rolldown-cli/issues"
  },
  "files": [
    "bin",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "rolldown": "./bin/cli.js"
  },
  "devDependencies": {
    "@eslint/js": "8.57.0",
    "@types/node": "^20.11.25",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "globals": "^14.0.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2",
    "typescript-eslint": "^7.1.1"
  },
  "dependencies": {
    "@rolldown/node": "^0.0.5"
  },
  "scripts": {
    "dev": "tsc -p tsconfig.json --watch",
    "build": "tsc -p tsconfig.json",
    "fix": "run-p fix:*",
    "fix:prettier": "pnpm prettier --write",
    "fix:eslint": "pnpm eslint --fix",
    "lint": "run-s lint:*",
    "lint:prettier": "pnpm prettier --check",
    "lint:eslint": "pnpm eslint",
    "prettier": "prettier --cache --ignore-path ./.prettierignore --config ./prettier.config.js \"**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,json,yml,yaml,md}\"",
    "eslint": "eslint . --cache"
  },
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --write"
    ],
    "*.{js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint --fix"
    ]
  }
}
